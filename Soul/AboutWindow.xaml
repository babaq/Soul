<Window x:Class="Soul.AboutWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="About Soul" Background="Lavender" Height="400" Width="500" ShowInTaskbar="False" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Icon="Soul.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"  />
            <RowDefinition Height="Auto"  />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="140" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Label FontWeight="Bold" FontSize="35" Grid.Row="0"  Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="1" VerticalAlignment="Center" HorizontalAlignment="Center" >Soul</Label>
        <Label FontWeight="Bold" FontSize="20" Grid.Row="0"  Grid.RowSpan="1" Grid.Column="1" Grid.ColumnSpan="1" VerticalAlignment="Center" HorizontalAlignment="Center" >Neural Network Simulation</Label>
        <Image Name="SoulImage" Stretch="None"  Source="Soul.png"  HorizontalAlignment="Center" Grid.Column="0" Grid.ColumnSpan="1" Grid.Row="1" Grid.RowSpan="1" VerticalAlignment="Center" />
        <StackPanel x:Name="Info" Grid.ColumnSpan="1" Grid.Column="1" Grid.Row="1" Grid.RowSpan="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Label FontWeight="Bold" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Stretch">Copyright © 2010 LBE Group</Label>
        </StackPanel>
        <Button Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Name="AboutOK" Width="60" Height="30" Click="AboutOK_Click" >
            OK
        </Button>
        <TextBlock FontSize="15" Grid.Row="2" Grid.RowSpan="1" Grid.Column="1" Grid.ColumnSpan="1" HorizontalAlignment="Center" VerticalAlignment="Center">Home: 
            <Hyperlink Click="Codeplex_Click">
                        http://soul.codeplex.com
            </Hyperlink>.
        </TextBlock>
    </Grid>
</Window>
